{
    "name": "Search With...",
    "description": "Easily search for the selected text in other search engines (Bing, Google, Ask, Yahoo) by right-clicking.",
    "version": "0.1",
    "permissions": [
 "contextMenus",
 "storage"
  ],
    "background": {
        "persistent": true,
        "scripts": ["background.js"]
    },
    "browser_action": {
        "default_title": "'Search With' History",
        "default_popup": "popup.html"
    },
    "options_page": "options.html",
    "manifest_version": 2
}